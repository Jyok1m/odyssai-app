{
	"expo": {
		"name": "Odyssai",
		"slug": "odyssai-app",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/images/icon.png",
		"scheme": "odyssaiapp",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": true,
		"description": "Your AI-powered RPG storyteller companion for immersive interactive adventures",
		"keywords": ["ai", "rpg", "storytelling", "adventure", "interactive", "chat"],
		"platforms": ["ios", "android", "web"],
		"privacy": "unlisted",
		"splash": {
			"image": "./assets/images/splash-icon.png",
			"resizeMode": "contain",
			"backgroundColor": "#22223b"
		},
		"ios": {
			"supportsTablet": true,
			"bundleIdentifier": "com.jyokim.odyssaiapp",
			"buildNumber": "1",
			"backgroundColor": "#22223b",
			"userInterfaceStyle": "automatic",
			"config": {
				"usesNonExemptEncryption": false
			},
			"infoPlist": {
				"ITSAppUsesNonExemptEncryption": false,
				"NSMicrophoneUsageDescription": "This app uses the microphone to record voice messages for the AI storyteller.",
				"NSSpeechRecognitionUsageDescription": "This app uses speech recognition to convert your voice to text for better interaction with the AI."
			},
			"associatedDomains": ["applinks:odyssai.app"]
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/adaptive-icon.png",
				"backgroundColor": "#22223b"
			},
			"package": "com.jyokim.odyssaiapp",
			"versionCode": 1,
			"backgroundColor": "#22223b",
			"userInterfaceStyle": "automatic",
			"permissions": ["android.permission.RECORD_AUDIO", "android.permission.INTERNET", "android.permission.ACCESS_NETWORK_STATE"],
			"edgeToEdgeEnabled": true,
			"intentFilters": [
				{
					"action": "VIEW",
					"data": [
						{
							"scheme": "https",
							"host": "odyssai.app"
						}
					],
					"category": ["BROWSABLE", "DEFAULT"]
				}
			]
		},
		"web": {
			"bundler": "metro",
			"output": "static",
			"favicon": "./assets/images/favicon.png",
			"name": "Odyssai - AI RPG Storyteller",
			"shortName": "Odyssai",
			"description": "Your AI-powered RPG storyteller companion",
			"backgroundColor": "#22223b",
			"themeColor": "#9a8c98",
			"display": "standalone",
			"orientation": "portrait",
			"startUrl": "/",
			"lang": "en"
		},
		"plugins": [
			"expo-router",
			"expo-secure-store",
			[
				"expo-dev-client",
				{
					"addGeneratedScheme": false
				}
			],
			[
				"expo-audio",
				{
					"microphonePermission": "Allow Odyssai to access your microphone."
				}
			]
		],
		"experiments": {
			"typedRoutes": true
		},
		"extra": {
			"router": {
				"origin": false
			},
			"eas": {
				"projectId": "d05d678b-2c9a-4ae9-a743-6ac44e898511"
			}
		},
		"owner": "jyokim",
		"runtimeVersion": {
			"policy": "appVersion"
		},
		"updates": {
			"url": "https://u.expo.dev/d05d678b-2c9a-4ae9-a743-6ac44e898511"
		}
	}
}
